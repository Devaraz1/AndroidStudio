<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarScrollView">
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/bgnahimiya"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/ivBookPict"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:src="@drawable/nahimiya"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvbookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="The Miracles of the Namiya General Store"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/ivBookPict"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keigo Higashino"
        android:textSize="15sp"
        android:layout_below="@id/tvbookTitle"
        android:layout_toEndOf="@id/ivBookPict"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/Icrating"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baseline_star_rate_24"
        android:layout_toEndOf="@id/creator"
        android:layout_below="@id/tvbookTitle"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"

        />
    <TextView
        android:id="@+id/tvrating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.5"
        android:textSize="15sp"
        android:layout_toEndOf="@id/Icrating"
        android:layout_below="@id/tvbookTitle"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="90+ Reviews"
        android:textSize="15sp"
        android:layout_toEndOf="@id/tvrating"
        android:layout_below="@id/tvbookTitle"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/genre1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D7EAF4"
        android:layout_below="@id/ivBookPict"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiction"
            android:textColor="#198cff"
            android:textSize="16sp"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/genre2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D7EAF4"
        android:layout_below="@id/ivBookPict"
        android:layout_toEndOf="@id/genre1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy"
            android:textColor="#198cff"
            android:textSize="16sp"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/genre3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D7EAF4"
        android:layout_below="@id/ivBookPict"
        android:layout_toEndOf="@id/genre2"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Japan"
            android:textColor="#198cff"
            android:textSize="16sp"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Sinopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Synopsys"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#198cff"
        android:gravity="center"
        android:layout_below="@id/genre1"
        />
    <ScrollView
        android:id="@+id/svsinopsis"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/Sinopsis"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/isiSinopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/plot"
                android:textColor="@color/black"
                />
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:layout_below="@id/svsinopsis"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/tvReview" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cvReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_marginStart="20dp"
                >
                <ImageView
                    android:id="@+id/ivprofile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/temee"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Di Anime Tidak Begitu"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/cvReview"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tvisiReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buku Yang Bagus"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_below="@id/profileName"
                android:layout_toRightOf="@id/cvReview"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvReview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_marginStart="20dp"
                android:layout_below="@id/cvReview"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/ivprofile2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mazdalemans"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/profileName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/cvReview2"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_below="@id/cvReview"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tvisiReview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buku Yang Sangat Menarik Karena Mengajarkan Tentang Kehidupan"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_below="@id/profileName2"
                android:layout_toRightOf="@id/cvReview2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Continue Reading"
        android:backgroundTint="@color/teal_700"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />
</RelativeLayout>