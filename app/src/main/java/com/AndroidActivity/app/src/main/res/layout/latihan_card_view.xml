<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/ivDestination"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/theeigermt"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eiger Mountain"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_below="@id/ivDestination"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLocation"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="@string/eigerdesc"
                android:layout_marginStart="15dp"
                />
            <ImageView
                android:id="@+id/icLocation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_location_on_24"
                android:layout_below="@id/tvDescription"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tvLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switzterland"
                android:layout_toEndOf="@+id/icLocation"
                android:layout_below="@id/tvDescription"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                />
            <ImageView
                android:id="@+id/icPrice"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_price_check_24"
                android:layout_below="@id/tvDescription"
                android:layout_toEndOf="@id/tvLoc"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250/Package"
                android:layout_toEndOf="@id/icPrice"
                android:layout_below="@id/tvDescription"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Trip Now"
                android:backgroundTint="@color/teal_700"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>